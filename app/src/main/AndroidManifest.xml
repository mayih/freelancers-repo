        <activity
            android:name="il.bruzn.freelancers.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.bruzn.freelancers.JoinInActivity"
            android:label="@string/title_activity_join_in"
