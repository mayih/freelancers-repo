<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

    <ImageView android:id="@+id/profile_picture"
                 android:layout_marginTop="4dp"
                 android:layout_marginRight="4dp"
                 android:layout_marginLeft="4dp"
                 android:layout_width="150dp"
                 android:layout_height="160dp"
        android:src="@drawable/profile_icon"/>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/profile_picture"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true">

    <TextView android:id="@+id/profile_firstName_label"
              android:layout_marginTop="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Moshe" />

    <TextView android:id="@+id/profile_lastName_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Uzan"/>

    <TextView android:id="@+id/profile_specialisation_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Spe"/>

    <TextView android:id="@+id/profile_email_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="edze@gmail.com"/>

    <TextView android:id="@+id/profile_phoneNumber_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0543839498"/>

    <TextView android:id="@+id/profile_adress_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="21 havaad haleumi"/>
    </LinearLayout>

<TextView android:id="@+id/profile_average_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/profile_picture"
    android:text="5/5"
    android:layout_centerInParent="true"
    android:visibility="gone"
    />


</RelativeLayout>