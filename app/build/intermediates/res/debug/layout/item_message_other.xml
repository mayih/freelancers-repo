<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp">

	<ImageView
		android:id="@+id/picture_item_message"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/default_profile_pic"
		android:layout_alignParentRight="true"/>

	<TextView
		android:id="@+id/text_message"
		android:layout_width="wrap_content"
		android:minWidth="45dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_toLeftOf="@id/picture_item_message"
		android:text="TEXT.."/>

	<TextView
		android:id="@+id/time_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignLeft="@id/text_message"
		android:layout_below="@id/text_message"
		android:text="Time"/>
</RelativeLayout><!-- From: file:/C:/Users/yairo_000/Documents/Java-Projects/Freelancers/app/src/main/res/layout/item_message_other.xml -->